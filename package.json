{
  "name": "@eheikes/project-template",
  "version": "0.2.0",
  "description": "Templates and standard configuration for software projects",
  "main": "update-project.js",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "update-project": "./update-project.js"
  },
  "scripts": {
    "test": "NODE_ENV=test JASMINE_CONFIG_PATH=./test/jasmine.json nyc jasmine",
    "lint": "standard --fix --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eheikes/project-template.git"
  },
  "author": "Eric Heikes <eheikes@gmail.com>",
  "license": "Apache-2.0",
  "keywords": [
    "project",
    "template"
  ],
  "bugs": {
    "url": "https://github.com/eheikes/project-template/issues"
  },
  "homepage": "https://github.com/eheikes/project-template#readme",
  "dependencies": {
    "dot-prop": "^4.2.0",
    "execa": "^0.9.0",
    "js-yaml": "^3.10.0",
    "listr": "^0.13.0",
    "parse-packagejson-name": "^1.0.1"
  },
  "devDependencies": {
    "jasmine": "^3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "nyc": "^11.4.1",
    "standard": "^11.0.0"
  },
  "contributors": [
    "Eric Heikes <eheikes@gmail.com>"
  ],
  "files": [
    "lib",
    "tasks",
    "templates",
    "update-project.js"
  ],
  "standard": {
    "env": {
      "jasmine": true,
      "node": true
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "include": [
      "*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": false,
    "all": false,
    "report-dir": "./coverage"
  }
}